{
    "buildCommand": "prisma generate && next build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "installCommand": "npm install",
    "regions": [
        "iad1"
    ],
    "env": {
        "NEXT_PUBLIC_URL": "https://steadyletters.com"
    },
    "crons": [
        {
            "path": "/api/cron/reset-usage",
            "schedule": "0 0 1 * *"
        },
        {
            "path": "/api/cron/process-scheduled-orders",
            "schedule": "*/15 * * * *"
        },
        {
            "path": "/api/cron/compute-features",
            "schedule": "0 */6 * * *"
        },
        {
            "path": "/api/cron/evaluate-segments",
            "schedule": "0 */1 * * *"
        }
    ],
    "github": {
        "deployHooks": [
            {
                "name": "Post-Deploy Tests",
                "url": "https://www.steadyletters.com/api/post-deploy",
                "events": ["deployment"]
            }
        ]
    }
}
