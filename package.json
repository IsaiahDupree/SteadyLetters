{
  "name": "steady-letters",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:components": "vitest run tests/unit/components",
    "test:components:watch": "vitest watch tests/unit/components",
    "test:local": "LOCAL_URL=http://localhost:3000 npm test -- tests/environment-comparison.test.mjs",
    "test:production": "PRODUCTION_URL=https://www.steadyletters.com npm test -- tests/environment-comparison.test.mjs",
    "test:compare": "npm run test:local && npm run test:production",
    "test:e2e": "playwright test",
    "test:e2e:local": "playwright test --project=local",
    "test:e2e:production": "TEST_ENV=production playwright test --project=production",
    "test:e2e:both": "playwright test --project=local && TEST_ENV=production playwright test --project=production",
    "test:all": "npm test && npm run test:e2e:local",
    "test:production-diagnostics": "PRODUCTION_URL=https://www.steadyletters.com playwright test tests/e2e/production-diagnostics.spec.ts",
    "test:api-health": "npm test -- tests/api-health-check.test.mjs",
    "check:env": "node scripts/check-production-env.mjs",
    "validate:keys": "node scripts/validate-api-keys.mjs",
    "fix:local-env": "./scripts/fix-local-env.sh",
    "diagnose": "npm run check:env && npm run validate:keys && npm run test:production-diagnostics",
    "diagnose:local": "npm run check:env && npm run validate:keys && npm run test:api-health",
    "test:post-deploy": "node scripts/post-deploy-tests.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.35.0",
    "@stripe/stripe-js": "^8.5.3",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.84.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.554.0",
    "next": "16.0.4",
    "openai": "^6.9.1",
    "posthog-js": "^1.332.0",
    "posthog-node": "^5.24.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.1",
    "resend": "^6.8.0",
    "sonner": "^2.0.7",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "jest": "^30.2.0",
    "jsdom": "^27.4.0",
    "lighthouse": "^13.0.1",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
